{
  "name": "clj-monaco",
  "version": "0.0.1",
  "description": "A ClojureScript library for Monaco Editor",
  "main": "./dev/src/index.js",
  "scripts": {
    "shadow:dev": "shadow-cljs watch dev",
    "shadow:release": "shadow-cljs release min",
    "shadow:server": "shadow-cljs server",
    "server": "npx http-server ./dev/resources/public -p 3000",
    "monaco:watch": "rollup -c rollup.config.js --watch",
    "monaco:build": "rollup -c rollup.config.js",
    "monaco:build:min": "rollup -c rollup.config.min.js  --environment NODE_ENV:production"
  },
  "engines": {
    "node": ">=13.6.0",
    "npm": ">=6.13.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/just-sultanov/clj-monaco.git"
  },
  "keywords": [
    "clojure",
    "clojurescript",
    "monaco",
    "monaco-editor"
  ],
  "author": "Ilshat Sultanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/just-sultanov/clj-monaco/issues"
  },
  "homepage": "https://github.com/just-sultanov/clj-monaco",
  "dependencies": {
    "create-react-class": "^15.6.3",
    "monaco-editor": "^0.19.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^7.0.0",
    "highlight.js": "9.17.1",
    "http-server": "^0.12.1",
    "react-highlight.js": "1.0.7",
    "rollup": "^1.29.0",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-terser": "^5.1.3",
    "rollup-plugin-typescript2": "^0.25.3",
    "shadow-cljs": "^2.8.83",
    "typescript": "^3.7.4"
  }
}
